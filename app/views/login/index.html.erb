<div class="flex flex-col justify-center items-center w-full">
  <div class="w-12">
    <%= image_tag "logo-fit.png" %>
  </div>

  <form
    class="form shadow rounded flex flex-col gap-2.5 p-4 m-2 w-3/4 bg-white"
    action="/login"
    method="post"
  >
    <div class="item">
      <label>Email:</label>
      <input name="email">
    </div>

    <div class="item">
      <label>Contraseña:</label>
      <input name="password">
    </div>

    <button type="submit" class="btn-primary mt-4">
      Iniciar Sesión
    </button>
  </form>
</div>